        <TextBox HorizontalAlignment="Left" Margin="472,102,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="300" PlaceholderText="Text Box"/>
        <TextBlock HorizontalAlignment="Left" Margin="473,178,0,0" Text="Link" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="473,214,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="300" PlaceholderText="Text Box"/>

    </Grid>
</Page>
