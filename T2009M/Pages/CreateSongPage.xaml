        <TextBlock HorizontalAlignment="Left" Margin="102,66,0,0" Text="Name" TextWrapping="Wrap" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="102,102,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="300" PlaceholderText="Text Box"/>
        <TextBlock HorizontalAlignment="Left" Margin="102,178,0,0" Text="Description"  TextWrapping="Wrap" VerticalAlignment="Top"/>
